<%- include('../partials/header') %>
<h1><%= title %></h1> 
<form action="/slams/<%= slams._id %>/comments" method="POST">
    <input name="comment">
    <button type="submit">ADD COMMENT</button>
  </form>
    <section id="comments">
        <br>
        <% slams.comments.forEach(c =>{ %>
    <img src=<%= c.commentUserAvatar %> >
    <p><%= c.username %> </p>
    <h1><%= c.comment %> </h1>
        <% }) %> 
    </section>
    <a href="/">Home Page</a>
    <!-- Be sure and name attributes of inputs to match the model properties -->
    
</body>
</html>
